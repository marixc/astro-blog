---
const { title, url, image } = Astro.props;
---

<!-- TODO: how to implement the image -->
<a class="card" href={url}>
  <div class="content">
    <img src={image.url} alt={image.alt} />
    <h3>{title}</h3>
    <p>hello</p>
  </div>
</a>

<style>
  .card {
    border: 1px solid #ccc;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease;
    margin: 9px;
  }
  .card:hover {
    transform: scale(1.02);
  }
  img {
    width: 100%; /* Full width of parent */
    height: auto; /* Maintain aspect ratio */
    max-height: 200px; /* Optional: Limit height to avoid huge images */
    object-fit: cover; /* Optional: Crop instead of squish */
    border-bottom: 1px solid #ddd; /* Optional visual polish */
    display: block;
  }
  .content {
    padding: 1em;
  }
  h3 {
    margin: 0 0 0.5em;
  }
  p {
    margin: 0;
  }
</style>
